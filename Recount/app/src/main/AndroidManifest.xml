<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aragon.hazel.recount">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CounterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddProjectActivity"
            android:label="@string/title_activity_add_project"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HistoryActivity"
            android:label="@string/title_activity_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddNewProjectActivity"
            android:label="@string/title_activity_add_new_project"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewAllActivity"
            android:label="@string/title_activity_view_all"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
